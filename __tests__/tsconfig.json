{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "types": ["node"],
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "include": [
        "./**/*"
    ]
}